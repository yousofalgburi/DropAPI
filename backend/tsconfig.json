{
	"compilerOptions": {
		"module": "CommonJS",
		"moduleResolution": "Node",
		"target": "ESNext",
		"outDir": "./dist",
		"rootDir": "./",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["./*", "drizzle.config.ts"],
	"exclude": ["node_modules"]
}
